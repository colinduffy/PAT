@model PAT_ELAC.Models.Test

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Test</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Level)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Level)
            @Html.ValidationMessageFor(model => model.Level)
        </div>
                <div class="editor-label">
            @Html.LabelFor(model => model.Threshold)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Threshold)
            @Html.ValidationMessageFor(model => model.Threshold)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SubjectId, Model.Subjects)
            @Html.ValidationMessageFor(model => model.SubjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <table style="width:100%">
            <tr>
	            <th>Topic</th>
	            <th>Quantity</th>
                <th>Value/Question</th>
            </tr>
             @for (int i = 0; i < 5; i++)
             { 
             <tr>
                <td>@Html.DropDownListFor(model => model.TestTopic[i].TopicId, Model.Topics)</td>
                <td>
                    @Html.EditorFor(model => model.TestTopic[i].Quantity)
                    @Html.ValidationMessageFor(model => model.TestTopic[i].Quantity)
                </td> 
                 <td>
                    @Html.EditorFor(model => model.TestTopic[i].QuestionValue)
                    @Html.ValidationMessageFor(model => model.TestTopic[i].QuestionValue)
                </td> 
            </tr>
             }   
        </table>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
